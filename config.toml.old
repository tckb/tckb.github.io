baseurl = "https://tckb.tgrthi.me"
title = "Chandra's Ramblings"
theme = "KeepIt"
languagecode = "en"
defaultcontentlanguage = "en"
paginate = 20
canonifyurls = true
pygmentsstyle = "b2"
pygmentscodefences = true
pygmentscodefencesguesssyntax = true
disqusShortname = "tckb"

[params]
    author = "Chandra ∕tʃǽndrə∕"
    info = "I turn ☕ ☕ to artful piece of code.."
    description = "Chandra's personal ramblings"
    keywords = "blog,developer,personal"
    avatarurl = "profile.jpg"
    favicon_32 = "/img/favicon-32x32.png"
    favicon_16 = "/img/favicon-16x16.png"
    footercontent = "All posts and blogs on this site are based on personal experience and opinions"
    hidecredits = false
    hidecopyright = false
    rtl = false
    math = true
    custom_css = ["css/custom.css"]
    dateformat = "January 2, 2006"
    enableGitInfo = true
    enableRobotsTXT = true
    commit = "https://gitlab.com/tckb1/tckb1.gitlab.io/tree/"

[taxonomies]
    category = "categories"
    series = "series"
    tag = "tags"

[frontmatter]
    date = ["date", "publishDate", "lastmod"]
    lastmod = [":git", "lastmod", "date", "publishDate"]
    publishDate = ["publishDate", "date"]
    expiryDate = ["expiryDate"]



